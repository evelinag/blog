@{
    Layout = "default";
    Title = "Evelina Gabasova | Blog";
    Description = "Evelina Gabasova's personal blog. I'll be writing about machine learning and data science in F#.";
}

@using System.Linq
@helper PostDate(DateTime rawDate)
{
    <time datetime="@rawDate.ToString("yyyy'-'MM'-'dd'T'HH':'mm':'ss")" pubdate data-updated="true">@rawDate.ToString("d MMMM, yyyy")</time>
}


@foreach (var post in Enumerable.Take(Model.Posts, 15))
{
    <h3 class="h2link">
        <a href="@Model.Root/blog/@post.Url/index.html">@post.Title</a>
    </h3>
    <h6>
        Written on @PostDate(post.Date)
    </h6>
    <br />
    <article>
        @post.Abstract

        <a href="@Model.Root/blog/@post.Url/index.html">[Continue reading ..]</a>
    </article>
}
