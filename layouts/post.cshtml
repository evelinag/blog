@{
    Layout = "page";
}
<h1>@Title</h1>
<article>
    @RenderBody()
</article>

<p class="post-meta">
    Published on @DateTime.Parse(Date).ToString("dddd, d MMMM yyyy", System.Globalization.CultureInfo.GetCultureInfo("en-GB"))
    <br />
    By <a href="https://plus.google.com/+EvelinaGabasova?rel=author">Evelina Gabasova</a><br />
</p>

